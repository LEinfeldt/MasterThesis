<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MapPictureActivity"
    >

    <com.skobbler.ngx.map.SKMapViewHolder
        android:id="@+id/view_group_mapPicture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locateButtonPicture"
        android:src="@mipmap/ic_my_location"
        android:contentDescription="@string/current_position"

        android:layout_above="@+id/buttonPicture"
        android:layout_alignParentEnd="true" />


    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/picture"
        android:id="@+id/switchPicture"
        android:layout_below="@+id/destinationPicture"
        android:layout_alignParentEnd="true" />

    <EditText
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/originPicture"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/switchPicture"
        android:hint = "@string/origin_name"
        />

    <EditText
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/destinationPicture"
        android:layout_below="@+id/originPicture"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/switchPicture"
        android:hint = "@string/destination_name"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate_route"
        android:id="@+id/buttonPicture"
        android:onClick="onButtonClicked"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarPicture"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

</RelativeLayout>
